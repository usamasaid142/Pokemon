<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/add_sub_specialization_bg"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/photo_bg"
            />

        <ImageView
            android:id="@+id/add_sub_specialization_iv"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="@id/add_sub_specialization_bg"
            app:layout_constraintBottom_toBottomOf="@id/add_sub_specialization_bg"
            app:layout_constraintStart_toStartOf="@id/add_sub_specialization_bg"
            app:layout_constraintEnd_toEndOf="@id/add_sub_specialization_bg"
            android:src="@drawable/ic_add"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>